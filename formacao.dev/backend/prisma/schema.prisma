// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto{
  id          Int @id @default(autoincrement())
  nome        String
  descricao   String
  marca       String
  modelo      String
  imagem      String
  nota        String
  videoReview String
  
  tags        String[]

  precoBase         Float
  precoPromocional  Float
  menorBase         Float
  maiorBase         Float
  precoMedio        Float
  
  especificacoes Json

  @@map("produtos")
}